<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.noshufou.android.su"
    android:versionCode="9"
    android:versionName="2.1"
    android:sharedUserId="android.uid.system">
    
    <uses-sdk android:minSdkVersion="4" android:targetSdkVersion="7" />

    <application android:icon="@drawable/icon" android:label="@string/app_name_perms">
        <activity android:name="Su"
            android:label="@string/app_name_perms"
            android:screenOrientation="nosensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="SuRequest"
            android:label="@string/app_name_request"
            android:excludeFromRecents="true"
            android:theme="@android:style/Theme.NoDisplay" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="SuPreferences">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <receiver android:name="SuRequestBroadcast">
        	<intent-filter>
				<action android:name="com.noshufou.android.su.SuRequestBroadcast.REQUEST" />
			</intent-filter>
        </receiver>
        <receiver android:name="UninstallReceiver">
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_REMOVED" />
                <data android:scheme="package" />
            </intent-filter>
        </receiver>
    </application>
</manifest>